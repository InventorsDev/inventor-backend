{
  "name": "inventors-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "deploy": "node build.js",
    "build": "nest build",
    "build-dev": "concurrently 'nest build'  'npm run docs:struct'",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "concurrently 'nest start' 'npm run docs:struct'",
    "start:dev": "concurrently \"nest start --watch\" \"npm run docs:struct\"",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "docs:struct": "compodoc -p tsconfig.json --disableSourceCode",
    "docs:struct-code": "compodoc -p tsconfig.json",
    "db:indexes": "node dist/shared/schemas/dbIndexesRunner",
    "seed": "node dist/shared/seeders/seeder",
    "seed:prod": "node dist/shared/seeders/prod.seeder",
    "seed:refresh": "node dist/shared/seeders/seeder --refresh",
    "seed:delete": "node dist/shared/seeders/seeder --delete",
    "seed:delete:test": "Test=true node dist/shared/seeders/seeder --delete",
    "seed:test": "Test=true node dist/shared/seeders/seeder --test",
    "seed:test:refresh": "Test=true node dist/shared/seeders/seeder --test --refresh",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/mongoose": "^10.0.6",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.12",
    "@nestjs/throttler": "^5.1.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cloudinary": "^1.41.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.4.5",
    "google-auth-library": "^9.0.0",
    "handlebars": "^4.7.8",
    "jwks-rsa": "^3.1.0",
    "mailgun.js": "^9.3.0",
    "mongoose": "^7.6.13",
    "nodemailer": "^6.9.14",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "ua-parser-js": "^1.0.36"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.19",
    "@faker-js/faker": "^8.1.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.4",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@types/ua-parser-js": "^0.7.37",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",

    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  },
  "engines": {
    "node": ">=18.12.1"
  }
}
